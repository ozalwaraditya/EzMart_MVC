@model Product

@* Edit Product Form *@
<form asp-controller="Product" asp-action="Edit" method="post">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden />

        @* Heading *@
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>

        @* Product Title *@
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Product Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter product title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        @* ISBN *@
        <div class="mb-3">
            <label asp-for="ISBN" class="form-label">ISBN</label>
            <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        @* Author *@
        <div class="mb-3">
            <label asp-for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" placeholder="Enter author name" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        @* Description *@
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @* List Price *@
        <div class="mb-3">
            <label asp-for="ListPrice" class="form-label">List Price</label>
            <input asp-for="ListPrice" type="number" class="form-control" placeholder="Enter list price" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        @* Price for 1-50 *@
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price (1-50)</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="Enter price for 1-50" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        @* Price for 50+ *@
        <div class="mb-3">
            <label asp-for="Price50" class="form-label">Price (50+)</label>
            <input asp-for="Price50" type="number" class="form-control" placeholder="Enter price for 50+" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        @* Price for 100+ *@
        <div class="mb-3">
            <label asp-for="Price100" class="form-label">Price (100+)</label>
            <input asp-for="Price100" type="number" class="form-control" placeholder="Enter price for 100+" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        @* Submit and Back Buttons *@
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Changes
            </button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</form>

@* Client-Side Validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}