@model Product

@* Delete Product Form *@
<form asp-controller="Product" asp-action="Delete" method="post">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden />

        @* Heading *@
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        @* Product Title *@
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Product Title</label>
            <input asp-for="Title" class="form-control" disabled />
        </div>

        @* ISBN *@
        <div class="mb-3">
            <label asp-for="ISBN" class="form-label">ISBN</label>
            <input asp-for="ISBN" class="form-control" disabled />
        </div>

        @* Author *@
        <div class="mb-3">
            <label asp-for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" disabled />
        </div>

        @* Submit and Back Buttons *@
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-delete btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</form>

@* Client-Side Validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}