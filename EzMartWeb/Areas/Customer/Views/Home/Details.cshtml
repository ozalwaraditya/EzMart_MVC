@model ShoppingCart

@{
    ViewData["Title"] = "Product Details";
}

<style>
    body {
        background-color: #f8f9fa; /* light gray background */
    }

    .details-card {
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
    }

    .badge-category {
        font-size: 0.9rem;
        background-color: #e2e3e5;
        color: #333;
    }

    .price-strike {
        text-decoration: line-through;
        color: #dc3545;
    }

    .price-highlight {
        color: #ffc107;
        font-weight: bold;
    }

    .btn-back:hover {
        background-color: #0d6efd;
        color: #fff;
    }

    input[type="number"]:focus {
        box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
        border-color: #86b7fe;
    }

    .input-group-text {
        min-width: 75px;
    }

</style>

<form method="post">
    <div class="container py-5">
        <div class="card details-card border-0">
            <!-- Header -->
            <div class="card-header bg-dark text-light text-center py-4">
                <h3 class="text-uppercase mb-0">@Model.Product.Title</h3>
                <small class="text-light-50">by @Model.Product.Author</small>
            </div>

            <!-- Body -->
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-2">
                        <a asp-action="Index" class="btn btn-outline-primary btn-sm text-uppercase fw-semibold btn-back">
                            ← Back to home
                        </a>
                    </div>
                </div>

                <div class="row">
                    <!-- Product Image -->
                    <div class="col-lg-4 text-center mb-4 mb-lg-0">
                        <img src="@Model.Product.ImgUrl" alt="@Model.Product.Title" class="img-fluid rounded shadow-sm" />
                    </div>

                    <!-- Product Info -->
                    <div class="col-lg-8">
                        <div class="mb-3">
                            <span class="badge badge-category">@Model.Product.Category?.Name</span>
                        </div>

                        <p class="text-muted">ISBN: <strong>@Model.Product.ISBN</strong></p>

                        <p>
                            List Price: <span class="price-strike">$@Model.Product.ListPrice</span>
                        </p>

                        <!-- Pricing tiers -->
                        <div class="row mb-3">
                            <div class="col fw-semibold text-secondary">Quantity</div>
                            <div class="col fw-semibold text-secondary">1-50</div>
                            <div class="col fw-semibold text-secondary">51-100</div>
                            <div class="col fw-semibold text-secondary">100+</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">Price</div>
                            <div class="col price-highlight">$@Model.Product.Price</div>
                            <div class="col price-highlight">$@Model.Product.Price50</div>
                            <div class="col price-highlight">$@Model.Product.Price100</div>
                        </div>

                        <p class="text-secondary">@Model.Product.Description</p>

                        <!-- Quantity input -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label for="count" class="form-label fw-semibold">Quantity</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-primary text-white fw-semibold border-0">Count</span>
                                    <input type="number" id="count" name="count" value="1" min="1"
                                           class="form-control text-end border-start-0" />
                                </div>
                                <small class="text-muted">Enter how many items you want to purchase.</small>
                            </div>
                        </div>


                        <!-- Add to cart button -->
                        <div class="row">
                            <div class="col-md-6">
                                <button asp-for="Count" type="submit" class="btn btn-primary w-100 text-uppercase fw-semibold py-2">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
