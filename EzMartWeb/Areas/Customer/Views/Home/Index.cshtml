@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="text-center my-4">Our Products</h2>

<!-- Custom hover styles -->
<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

    .btn-hover:hover {
        transform: scale(1.05);
        background-color: #0d6efd !important; /* Bootstrap Primary with hover tweak */
        color: white;
    }

    .btn-hover {
        transition: transform 0.2s ease, background-color 0.3s ease;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4 d-flex">
                <div class="card product-card w-100">
                    <img src="@product.ImgUrl" class="card-img-top" alt="@product.Title" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text text-muted mb-2">by <strong>@product.Author</strong></p>
                        <p class="card-text mb-3">
                            <span class="text-muted text-decoration-line-through">$@product.ListPrice</span><br />
                            <span class="text-success fw-semibold">As low as $@product.Price100</span>
                        </p>
                        <a asp-action="Details" asp-route-productId=@product.Id class="btn btn-primary btn-hover mt-auto">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
